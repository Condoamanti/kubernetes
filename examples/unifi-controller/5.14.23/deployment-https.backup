---
# PersistentVolumeClaim Configuration
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-unifi-controller-data
  namespace: unifi-controller
  labels:
    type: nfs
  annotations:
    volume.beta.kubernetes.io/storage-class: standard
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi
---
# ConfigMap Configuration
apiVersion: v1
kind: ConfigMap
metadata:
  name: unifi-controller
  namespace: unifi-controller
  labels:
    app: unifi-controller
data:
  TZ: "America/Chicago"
  CERTNAME: "wild.jittersolutions.com.crt"
  CERT_PRIVATE_NAME: "wild.jittersolutions.com.key"
  CERT_IS_CHAIN: "true"
---
# Service Configuration
apiVersion: v1
kind: Service
metadata:
  name: unifi-controller
  namespace: unifi-controller
spec:
  externalTrafficPolicy: Cluster
  ports:
  - port: 8080 # HTTPS portal / Device command/control
    name: port1
    protocol: TCP
    targetPort: 8080
    nodePort: 30080
  - port: 8443 # HTTP portal / Web interface + API
    name: port2
    protocol: TCP
    targetPort: 8443
    nodePort: 30100
  - port: 3478 # STUN service
    name: port3
    protocol: UDP
    targetPort: 3478
  - port: 10001 # UBNT Discovery
    name: port4
    protocol: UDP
    targetPort: 10001
  selector:
    app: unifi-controller
  sessionAffinity: None
  type: NodePort
status:
  loadBalancer: {}
---
# Deployment Configuration
apiVersion: apps/v1
kind: Deployment
metadata:
  name: unifi-controller
  namespace: unifi-controller
spec:
  replicas: 1
  selector:
    matchLabels:
      app: unifi-controller
  template:
    metadata:
      labels:
        app: unifi-controller
    spec:
      volumes:
      - name: unifi-controller-data
        persistentVolumeClaim:
          claimName: pvc-unifi-controller-data
      - name: nfs-certificates
        nfs:
          server: 192.168.110.245
          path: /mnt/pool2/kubernetes-data/certificates
      containers:
      - name: unifi-controller
        image: jacobalberty/unifi:5.14.23
        volumeMounts:
          - name: unifi-controller-data
            mountPath: /unifi
          - name: nfs-certificates
            mountPath: /unifi/cert
        resources:
          requests:
            memory: "512Mi"
            cpu: "1000m"
          limits:
            memory: "1024Mi"
            cpu: "2000m"
        envFrom:
          - configMapRef:
              name: unifi-controller
        ports:
        - containerPort: 8080 # HTTPS portal / Device command/control
          name: port1 
        - containerPort: 8443 # HTTP portal / Web interface + API
          name: port2 
        - containerPort: 3478 # STUN service
          name: port3
        - containerPort: 10001 # UBNT Discovery
          name: port4
---