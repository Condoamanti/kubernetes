---
kind: IngressRoute
apiVersion: traefik.containo.us/v1alpha1
metadata:
  name: jenkins-server-ingressroute
  namespace: jenkins
spec:
  entryPoints: 
    - web
  routes:
  - kind: Rule
    match: "Path(`/jenkins`)" 
    priority: 10
    services:
    - name: jenkins-server
      namespace: jenkins
      port: 8080
    middlewares:
      - name: jenkins-server-stripprefix
---
apiVersion: traefik.containo.us/v1alpha1
kind: Middleware
metadata:
  name: jenkins-server-stripprefix
  namespace: jenkins
spec:
  stripPrefix:
    prefixes:
      - /jenkins
---
apiVersion: traefik.containo.us/v1alpha1
kind: Middleware
metadata:
  name: jenkins-server-redirectregex
  namespace: jenkins
spec:
  redirectRegex:
    regex: "^(.*)/jenkins$"
    replacement: ${1}
---