---
# PersistentVolumeClaim Configuration
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-influxdb-chronograf-var-lib-chronograf
  namespace: influxdb
  labels:
    type: nfs
  annotations:
    volume.beta.kubernetes.io/storage-class: standard
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi
---
# Service Configuration
apiVersion: v1
kind: Service
metadata:
  name: influxdb-chronograf-server
  namespace: influxdb
spec:
  externalTrafficPolicy: Cluster
  ports:
  - port: 8888
    name: http-ingress
    protocol: TCP
    targetPort: 8888
    nodePort: 30031
  selector:
    app: influxdb-chronograf
  sessionAffinity: None
  type: NodePort
status:
  loadBalancer: {}
---
# Deployment Configuration
apiVersion: apps/v1
kind: Deployment
metadata:
  name: influxdb-chronograf-server
  namespace: influxdb
spec:
  replicas: 1
  selector:
    matchLabels:
      app: influxdb-chronograf
  template:
    metadata:
      labels:
        app: influxdb-chronograf
    spec:
      volumes:
      - name: influxdb-chronograf-var-lib-chronograf
        persistentVolumeClaim:
          claimName: pvc-influxdb-chronograf-var-lib-chronograf
      containers:
      - name: influxdb-chronograf-server
        image: chronograf:latest
        args: [
          "chronograf", "--influxdb-url=http://influxdb-pfsense-server:8086"
        ]
        volumeMounts:
          - name: influxdb-chronograf-var-lib-chronograf
            mountPath: /var/lib/chronograf
        resources:
          requests:
            memory: "512Mi"
            cpu: "1000m"
          limits:
            memory: "1024Mi"
            cpu: "2000m"
        ports:
        - containerPort: 8888
          name: http-ui
---